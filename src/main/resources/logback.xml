<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %level %logger{36} %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="io.prometheus" level="WARN"/>
    <logger name="uk.humbkr.xtream2jellyfin.Xtream2JellyfinApp" level="INFO"/>
    <logger name="uk.humbkr.xtream2jellyfin.streamhandler.SeriesStreamsHandler" level="INFO"/>

    <root level="${DEBUG:-INFO}">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
